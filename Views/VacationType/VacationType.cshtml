@model IEnumerable<VacationManagment.Models.VacationType>

@{
    ViewData["Title"] = "VacationType";
}

<h1>VacationType</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VacationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.backgroundColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberDays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VacationName)
                </td>
                <td style = "color:#ffff; background-color:@item.backgroundColor">
                    @Html.DisplayFor(modelItem => item.backgroundColor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberDays)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id">Edit</a> |

                    <a  class="btn btn-danger" data-toggle="modal" data-target="#exampleModal"
                    data-url="@Url.Action($"Delete/{item.Id}")">Delete</a>
                </td>
            </tr>
              
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
                   <div class="modal-dialog" role="document">
                     <div class="modal-content">
                          <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel">Worning</h5>
                              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                          </div>
                          <div class="modal-body">
                            Are you sure you want to delete this item
                          </div>
                          <div class="modal-footer">
                          <form asp-action="Delete">
                            <input type="hidden" asp-route-id="@item.Id")" />
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" >Delete</a>
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Cancle</button>
                         </form> 
                          </div>
                     </div>
                   </div>
            </div>
}
    </tbody>
</table>
